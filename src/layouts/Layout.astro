---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="font-sans">
    <header class="bg-gray-100 py-4 text-center">
      <h1>
        <a href="/" class="text-2xl text-gray-800 hover:underline">
          Astro Photo Blog
        </a>
      </h1>
    </header>
    <slot />
  </body>
</html> 