---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import PhotoPost from '../components/PhotoPost.astro';
import Badge from '../components/Badge.astro';
const photos = await getCollection('photos');
const posts = await getCollection('blog');

// Combine and sort all content by date, limit to 5 most recent
const allContent = [...photos, ...posts]
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 5);
---

<Layout title="Astro Photo Blog">
  <main class="max-w-3xl mx-auto px-4">
    <div class="flex justify-between items-center my-8">
      <h2 class="text-2xl text-gray-800">Recent Posts</h2>
      <a href="/posts/1" class="text-blue-600 hover:underline">See all posts â†’</a>
    </div>
    {allContent.map(entry => {
      if (entry.collection === 'photos') {
        return (
          <PhotoPost
            image={entry.data.image}
            attribution={entry.data.attribution}
            tags={entry.data.tags}
            date={entry.data.date}
          />
        );
      } else {
        return (
          <article class="my-8">
            <h2>
              <a href={`/blog/${entry.slug}`} class="text-xl text-gray-800 hover:underline">
                {entry.data.title}
              </a>
            </h2>
            <div class="mt-2">
              <div class="flex gap-2 my-2">
                {entry.data.tags.map(tag => (
                  <Badge href={`/tags/${tag}`} class="text-blue-600 hover:underline">{tag}</Badge>
                ))}
              </div>
              <time class="text-gray-600" datetime={entry.data.date.toISOString()}>
                {entry.data.date.toLocaleDateString()}
              </time>
            </div>
          </article>
        );
      }
    })}
  </main>
</Layout>
