---
interface Props {
  title: string;
  slug: string;
  tags: string[];
  date: Date;
}

const { title, slug, tags, date } = Astro.props;
---

<article class="blog-post">
  <h2>
    <a href={`/blog/${slug}`}>{title}</a>
  </h2>
  <div class="metadata">
    <div class="tags">
      {tags.map((tag: string) => (
        <Badge href={`/tags/${tag}`} class="tag">{tag}</Badge>
      ))}
    </div>
    <time datetime={date.toISOString()}>
      {date.toLocaleDateString()}
    </time>
  </div>
</article> 