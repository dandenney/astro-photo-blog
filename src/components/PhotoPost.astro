---
import Lightbox from './Lightbox.astro';
import Badge from './Badge.astro';

interface Props {
  image: string;
  attribution: string;
  tags: string[];
  date: Date;
}

const { image, attribution, tags, date } = Astro.props;

// Create an array with just this image for the Lightbox
const images = [{
  url: image,
  attribution: attribution
}];
---

<article class="my-8">
  <a 
    href="#" 
    data-lightbox-trigger 
    class="block cursor-zoom-in"
  >
    <img 
      src={image} 
      alt={attribution} 
      class="w-full max-h-[600px] object-cover rounded-lg hover:opacity-90 transition-opacity duration-200"
    />
  </a>
  <div class="mt-4">
    <p class="text-gray-600 italic">{attribution}</p>
    <div class="flex gap-2 my-2">
      {tags.map(tag => (
        <Badge href={`/tags/${tag}`}>{tag}</Badge>
      ))}
    </div>
    <time class="text-gray-600" datetime={date.toISOString()}>
      {date.toLocaleDateString()}
    </time>
  </div>
</article>

<Lightbox 
  isOpen={false}
  images={images}
  currentIndex={0}
/> 